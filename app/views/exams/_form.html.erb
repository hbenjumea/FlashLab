<%= form_for(@exam) do |f| %>
  <% if @exam.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@exam.errors.count, "error") %> prohibited this exam from being saved:</h2>

      <ul>
      <% @exam.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :publication %><br>
    <%= f.date_select :publication, :start_year => 1900 %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.check_box :state %> (Pendiente o Realizado)
  </div>
  <div class="field">
    <%= f.label :patient_id %><br>
    <%= f.select :patient_id, options_for_select(@patients) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
